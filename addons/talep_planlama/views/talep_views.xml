<odoo>
    <record id="view_talep_form" model="ir.ui.view">
        <field name="name">talep.plan.form</field>
        <field name="model">talep.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="stage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_talep_tree" model="ir.ui.view">
        <field name="name">talep.plan.tree</field>
        <field name="model">talep.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="stage"/>
            </tree>
        </field>
    </record>

    <record id="talep_planlama_action" model="ir.actions.act_window">
        <field name="name">Talepler</field>
        <field name="res_model">talep.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="talep_planlama_menu_root" name="Talep Planlama"/>
    <menuitem id="talep_planlama_menu" name="Talepler"
              parent="talep_planlama_menu_root"
              action="talep_planlama_action"/>
</odoo>